<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhangqi.cms.dao.TagDao">
	<select id="select" resultType="Tag">
		select * from cms_tag
	</select>
	
	<select id="selectById" resultType="Tag">
		select * from cms_tag where id=#{id}
	</select>
	
	<select id="count" resultType="int">
		select count(1) from cms_tag
	</select>
	
	<insert id="insert">
		insert into cms_tag (tagname)
    	values (#{tag.tagname})
	</insert>
	
	<update id="update">
		update cms_tag
	    set tagname = #{tag.tagname}
	    where id = #{tag.id}
	</update>
	
	<delete id="deleteById">
		delete from cms_tag where id=#{id}
	</delete>
	
	<delete id="deleteByIds">
		delete from cms_tag where id in(${ids})
	</delete>
</mapper>